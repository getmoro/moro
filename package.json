{
  "name": "moro",
  "version": "4.1.1",
  "description": "Track work hours with a single command, no arguments, no buttons!",
  "main": "moro.js",
  "scripts": {
    "format": "prettier-standard 'lib/**/*.js'",
    "precommit": "lint-staged",
    "test": "cross-env MORO_TEST_MODE='true' ava && bats tests/end-to-end/moro.tests.bats",
    "contributor:add": "all-contributors add",
    "contributor:generate": "all-contributors generate",
    "postinstall": "opencollective postinstall"
  },
  "engines": {
    "node": ">=6"
  },
  "ava": {
    "files": [
      "tests/*.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "tap": true,
    "powerAssert": false
  },
  "keywords": [
    "time tracker",
    "time",
    "work hours",
    "productivity",
    "time tracking"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omidfi/moro.git"
  },
  "bin": {
    "moro": "./bin/moro.js"
  },
  "author": "Omid Hezaveh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/omidfi/moro/issues"
  },
  "homepage": "https://github.com/omidfi/moro#readme",
  "dependencies": {
    "bluebird": "3.5.1",
    "caporal": "0.10.0",
    "chalk": "2.4.1",
    "cli-table2": "0.2.0",
    "expand-home-dir": "0.0.3",
    "fs-extra": "6.0.1",
    "jsonfile": "4.0.0",
    "knex": "0.14.6",
    "lint-staged": "8.1.1",
    "moment": "2.22.1",
    "opencollective": "1.0.3",
    "ora": "2.1.0",
    "os-homedir": "1.0.2",
    "please-upgrade-node": "3.0.2",
    "sqlite3": "4.0.1",
    "update-notifier": "2.5.0"
  },
  "devDependencies": {
    "prettier-standard": "8.0.1",
    "husky": "0.14.3",
    "all-contributors-cli": "4.11.1",
    "ava": "0.25.0",
    "bats": "0.4.2",
    "bats-assert": "1.1.1",
    "cross-env": "5.1.5"
  },
  "lint-staged": {
    "bin/**/*.js": [
      "prettier-standard",
      "git add"
    ],
    "lib/**/*.js": [
      "prettier-standard",
      "git add"
    ]
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/moro",
    "logo": "https://opencollective.com/opencollective/logo.txt"
  }
}
