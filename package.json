{
  "name": "moro",
  "version": "3.2.0",
  "description": "Track work hours with a single command, no arguments, no buttons!",
  "main": "moro.js",
  "scripts": {
    "format": "prettier-standard 'lib/**/*.js'",
    "precommit": "lint-staged",
    "test": "cross-env MORO_TEST_MODE='true' ava && bats tests/end-to-end/moro.tests.bats",
    "contributor:add": "all-contributors add",
    "contributor:generate": "all-contributors generate",
    "postinstall": "opencollective postinstall"
  },
  "engines": {
    "node": ">=4"
  },
  "ava": {
    "files": [
      "tests/*.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "tap": true,
    "powerAssert": false
  },
  "keywords": [
    "time tracker",
    "time",
    "work hours",
    "productivity",
    "time tracking"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omidfi/moro.git"
  },
  "bin": {
    "moro": "./bin/moro.js"
  },
  "author": "Omid Hezaveh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/omidfi/moro/issues"
  },
  "homepage": "https://github.com/omidfi/moro#readme",
  "dependencies": {
    "bluebird": "3.5.1",
    "caporal": "0.4.1",
    "chalk": "^1.1.3",
    "cli-table2": "^0.2.0",
    "expand-home-dir": "^0.0.3",
    "fs-extra": "^2.1.2",
    "husky": "0.14.3",
    "jsonfile": "^2.4.0",
    "knex": "^0.12.7",
    "lint-staged": "4.0.2",
    "moment": "^2.17.1",
    "mz": "^2.6.0",
    "opencollective": "1.0.3",
    "ora": "^1.2.0",
    "os-homedir": "^1.0.2",
    "please-upgrade-node": "1.0.1",
    "prettier-standard": "6.0.0",
    "sqlite3": "^3.1.8",
    "update-notifier": "2.2.0"
  },
  "devDependencies": {
    "all-contributors-cli": "^4.3.0",
    "ava": "^0.19.0",
    "bats": "0.4.2",
    "bats-assert": "1.1.1",
    "cross-env": "^4.0.0"
  },
  "lint-staged": {
    "bin/**/*.js": [
      "prettier-standard",
      "git add"
    ],
    "lib/**/*.js": [
      "prettier-standard",
      "git add"
    ]
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/moro",
    "logo": "https://opencollective.com/opencollective/logo.txt"
  }
}
